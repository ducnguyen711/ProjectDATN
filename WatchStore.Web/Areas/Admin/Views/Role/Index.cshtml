@using WatchStore.Web.Areas.Admin.Models;
@using WatchStore.Web.Areas.Admin.Models.Models;
@using WatchStore.Web.Menu;
@model List<RoleModel>
@{
    ViewData["Title"] = "Danh sách các role (vai trò)";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<partial name="_StatusMessage"></partial>




<h1 class="h3 mb-2 text-gray-800">Quản lý role (vai trò)</h1>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách các role (vai trò)</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <div class="mb-2">
                <a class="btn btn-secondary" asp-action="Create">Tạo role mới</a>
                <a class="btn btn-secondary" asp-action="Index" asp-controller="User">Quản lý người dùng</a>
            </div>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên Role (vai trò)</th>
                        <th>Tác vụ</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Tên Role (vai trò)</th>
                        <th>Tác vụ</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>
                                <p>@role.Name</p>
                                @foreach (var claim in @role.Claims)
                                {
                                    <small>@claim</small>

                                    <br>
                                }
                            </td>
                            <td>
                                <a class="btn btn-primary" asp-action="Edit" asp-route-roleid="@role.Id"><i class="fa-solid fa-pen-to-square"></i></a> |
                                <a class="btn btn-success btn-danger" asp-action="Delete" asp-route-roleid="@role.Id"><i class="fa-solid fa-trash-can"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/js/common.js"></script>
}