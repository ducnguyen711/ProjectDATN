@model WatchStore.Web.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<partial name="_StatusMessage"></partial>
<h3>Thêm danh mục</h3>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Danh mục cha</label>
                <select asp-for="ParentCategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                    <option value="@null">Không có danh mục cha</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@{
    var summernote = new WatchStore.Web.Models.Summernote("#Description");
}
<partial name="_SummerNote" model="summernote" />


<div>
    <a asp-action="Index" class="btn btn-primary">Quay lại danh sách danh mục</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

