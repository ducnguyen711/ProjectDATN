@using WatchStore.Web.Areas.Identity.Models.Manage;
@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="container">


    <form asp-controller="Manage" style="font-size: 16px; background-color: #fff; padding: 16px; border-radius: 8px; margin: auto" asp-action="ChangePassword" method="post" class="form-horizontal col-md-5" role="form">
        <h1 style="font-size: 36px; text-align: center">@ViewData["Title"]</h1>
        <h4 style="font-size: 24px; text-align: center">Nhập thông tin để đổi mật khẩu</h4>
