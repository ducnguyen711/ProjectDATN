                    <small style="height: 10px;"></small>
                </div>
                <div class="clear"></div>
                <div class="input reqinput">
                    <input asp-for="NewPassword" class="form-control" />
                    <label asp-for="NewPassword" class="label"></label>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                    <small style="height: 10px;"></small>
                </div>
                <div class="input reqinput">
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <label asp-for="ConfirmPassword" class="label"></label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    <small style="height: 10px;"></small>
                </div>
                <div class="clear"></div>
                <div class="col-md-offset-2 col-md-12" style="display: flex; justify-content: center; align-items:center; margin-top: 16px">
                    <button type="submit" class="common-btn">Đổi mật khẩu</button>
                </div>
            </div>
