@using WatchStore.Web.Areas.Identity.Models.Manage;
@model VerifyPhoneNumberViewModel
@{
    ViewData["Title"] = "Xác nhận số điện thoại";
}



<div class="container">
    <h1 style="font-size: 36px">@ViewData["Title"]</h1>
    <form asp-controller="Manage" asp-action="VerifyPhoneNumber" style="font-size: 16px" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
        <input asp-for="PhoneNumber" type="hidden" />
        <h4 style="font-size: 24px">Thêm số điện thoại.</h4>
        <h5>@ViewData["Status"]</h5>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label style="font-size: 16px" asp-for="Code" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input style="font-size: 16px" asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="common-btn">Xác nhận</button>
            </div>
        </div>
    </form>
</div>


