@using WatchStore.Web.Areas.Identity.Models.Manage;
@model EditExtraProfileModel
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}


<partial name="_StatusMessage" />

<div class="container">
    <div class="row">
        <div class="col-md-6" style="margin: auto">
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="infouser" style="background: #fff; padding: 10px; border-radius: 8px">
                     <h4 style="font-size: 36px; padding: 16px; text-align: center">@ViewData["Title"]</h4>
                    <div class="areainfo">
                        <div class="input reqinput">
                            <input asp-for="FullName" style="font-size: 16px; margin-top: 10px" class="form-control" />
                            <label asp-for="FullName" style="margin-top: 11px" class="label"></label>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                            <small style="height: 10px"></small>
                        </div>
                        <div class="clear"></div>
                        <div class="input left reqinput">
                            <input asp-for="UserName" class="form-control" disabled />
                            <label asp-for="UserName" class="label"></label>
                            <small></small>
                        </div>
                        <div class="input right reqinput">
                            <input asp-for="PhoneNumber" class="form-control" disabled />
                            <label asp-for="PhoneNumber" class="label"></label>
                            <small></small>
                        </div>
                        <div class="input email reqinput">
                            <input asp-for="UserEmail" class="form-control" disabled />
                            <label asp-for="UserEmail" class="label"></label>
                            <small></small>
                        </div>
                        <div class="clear"></div>
                        <div class="input reqinput">                           
                            <textarea asp-for="HomeAdress" style="font-size: 16px; margin-top: 10px" class="form-control"></textarea>
                            <label asp-for="HomeAdress" style="margin-top: 11px" class="label"></label>
                            <span asp-validation-for="HomeAdress" class="text-danger"></span>
                            <small></small>
                        </div>
                        <div class="input reqinput">
                            <input asp-for="BirthDate" type="date" style="font-size: 16px; margin-top: 10px" class="form-control" />
                            <label asp-for="BirthDate" style="margin-top: 11px" class="label"></label>
                            
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>
                        <div class="clear"></div>
                        <div class="check-out-btn">
                            <input type="submit" value="Lưu dữ liệu" />
                        </div>
                    </div>
                </div>
@*                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="UserEmail"></label>
                    <input asp-for="UserEmail" class="form-control" disabled />
                </div>

                <div class="form-group">
                </div>
                <div class="form-group">
                    <label asp-for="HomeAdress"></label>
                    <textarea asp-for="HomeAdress" class="form-control"></textarea>
                    <span asp-validation-for="HomeAdress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BirthDate"></label>
                    <input asp-for="BirthDate" class="form-control" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>*@

                @*<button id="update-profile-button" type="submit" class="btn btn-primary">Lưu dữ liệu</button>*@
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}