@using WatchStore.Web.Areas.Identity.Models.Account;
@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}


<div class="container">
    <div class="row">
        <div class="col-md-5" style="margin: auto">
            <form asp-controller="Account" asp-action="ResetPassword" method="post" class="form-horizontal" role="form">
                <div class="infouser" style="background: #fff; padding: 10px; border-radius: 8px">
                    <h4 style="font-size: 36px; padding: 16px; text-align: center">Đặt lại mật khẩu của bạn</h4>
                    <div class="areainfo">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="@Model.Code" type="hidden" />
                        <div class="input email reqinput">
                            <input asp-for="Email" class="form-control" />
                            <label asp-for="Email" class="label"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <small style="height: 10px"></small>
                        </div>
                        <div class="clear"></div>
                        <div class="input reqinput">
                            <input asp-for="Password" class="form-control" />
                            <label asp-for="Password" class="label"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <small style="height: 10px"></small>
                        </div>
                        <div class="clear"></div>
                        <div class="input reqinput">
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <label asp-for="ConfirmPassword" class="label"></label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            <small style="height: 10px"></small>
                        </div>
                        <div class="clear"></div>
                        <div class="check-out-btn">
                            <input type="submit" value="Đặt lại" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}