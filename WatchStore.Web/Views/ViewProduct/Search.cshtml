            else
            {
            <div>
            <a class="sort-btn" id="sort-asc-btn" asp-route-sort="@ViewBag.sort" asp-action="GetProductByCategory" asp-route-page="@Model.PageNumber" asp-route-categoryId="@c.Id">Loại bỏ lọc giá</a>
            </div>
            }
            <!-- Lọc nhỏ hơn 3m -->
            @if (ViewBag.filter == "less3m" && ViewBag.sort == "")
            {
            <div>
            <a class="sort-btn active" id="sort-asc-btn" asp-route-filter="less3m" asp-action="GetProductByCategory" asp-route-page="@Model.PageNumber" asp-route-categoryId="@c.Id">Dưới 3 triệu</a>
            </div>
            }
            else if(ViewBag.filter == "less3m" && ViewBag.sort != "")
            {
            <div>
            <a class="sort-btn active" id="sort-asc-btn" asp-route-filter="less3m" asp-route-sort="@ViewBag.sort" asp-action="GetProductByCategory" asp-route-page="@Model.PageNumber" asp-route-categoryId="@c.Id">Dưới 3 triệu</a>
            </div>
            }
            else
            {
            <div>
            <a class="sort-btn" id="sort-asc-btn" asp-route-filter="less3m" asp-route-sort="@ViewBag.sort" asp-action="GetProductByCategory" asp-route-page="@Model.PageNumber" asp-route-categoryId="@c.Id">Dưới 3 triệup</a>
            </div>
            }*@


            @*<div>
            <div class="sort-btn" id="filter-3m-btn">Dưới 3 triệu</div>
            <div class="sort-btn" id="filter-3m-6m-btn">3-6 triệu</div>
            </div>
            <div>
            <div class="sort-btn" id="filter-6m-12m-btn">6-12 triệu</div>
            <div class="sort-btn" id="filter-12m-35m-btn">12-35 triệu</div>
            </div>
            <div>
            <div class="sort-btn" id="filter-12m-35m-btn">12-35 triệu</div>
            <div class="sort-btn" id="filter-35m-100m-btn">35-100 triệu</div>
