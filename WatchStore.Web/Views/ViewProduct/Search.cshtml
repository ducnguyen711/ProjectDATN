@model X.PagedList.IPagedList<WatchStore.Web.Models.Product>
@using X.PagedList.Mvc
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;
@{
    Category c = ViewBag.category as Category;
}
<div class="section-content container">
    <div class="heading-section">
        <a href="" class="heading-content">Kết quả tìm kiếm</a>
    </div>
    <div style="display: flex; flex-wrap: wrap">
        <div class="col-md-3">
            <p style="width: 90%; border-bottom: 1px solid #000; font-size: 24px"><i class="fa-solid fa-sort"></i> Sắp xếp</p>
            @if (ViewBag.sort == "")
            {
                <div>
                    <a class="sort-btn active" id="sort-asc-btn" asp-action="Search" asp-route-page="@Model.PageNumber" asp-route-textSearch="@ViewBag.textSearch"><i class="fa-solid fa-square-xmark"></i> Loại bỏ sắp xếp</a>
                </div>
            }
            else
            {
                <div>
                    <a class="sort-btn" id="sort-asc-btn" asp-action="Search" asp-route-page="@Model.PageNumber" asp-route-textSearch="@ViewBag.textSearch"><i class="fa-solid fa-square-xmark"></i> Loại bỏ sắp xếp</a>
                </div>
            }
            @if (ViewBag.sort == "asc")
            {
                <div>
                    <a class="sort-btn active" id="sort-asc-btn" asp-action="Search" asp-route-sort="asc" asp-route-page="@Model.PageNumber" asp-route-textSearch="@ViewBag.textSearch"><i class="fa-solid fa-arrow-down-short-wide"></i> Giá thấp đến cao</a>
                </div>
            }
            else
            {
                <div>
                    <a class="sort-btn" id="sort-asc-btn" asp-action="Search" asp-route-sort="asc" asp-route-page="@Model.PageNumber" asp-route-textSearch="@ViewBag.textSearch"><i class="fa-solid fa-arrow-down-short-wide"></i> Giá thấp đến cao</a>
                </div>
            }
            @if (ViewBag.sort == "desc")
            {
                <div>
                    <a class="sort-btn active" id="sort-asc-btn" asp-action="Search" asp-route-sort="desc" asp-route-page="@Model.PageNumber" asp-route-textSearch="@ViewBag.textSearch"><i class="fa-solid fa-arrow-down-wide-short"></i> Giá cao đến đến</a>
                </div>
            }
            else
            {
                <div>
                    <a class="sort-btn" id="sort-asc-btn" asp-action="Search" asp-route-sort="desc" asp-route-page="@Model.PageNumber" asp-route-textSearch="@ViewBag.textSearch"><i class="fa-solid fa-arrow-down-wide-short"></i> Giá cao đến đến</a>
                </div>
            }


            @*<p style="width: 90%; border-bottom: 1px solid #000; font-size: 24px; margin-top: 16px"><i class="fa-solid fa-filter"></i> Lọc theo giá</p>
            <!--Không có lọc -->
            @if (ViewBag.filter == "" && ViewBag.sort == "")
