@model IEnumerable<WatchStore.Web.Models.Product>
@{
    ViewData["Title"] = "Home Page";

}
<!-- Phần slider -->
<partial name="_SlidePartial" />
<div class="section-content container">
    <div class="list-brand row">
        <div class="brand-item col-lg-6 col-md-6">
            <div class="overlay-category"></div>
            <img src="./assets//img/donghonhat.jpg" alt="">
            <div class="brand-info">
                <h1 class="brand-name">Đồng Hồ Nhật</h1>
                <div class="see-more-btn">
                    <a asp-action="GetProductByCategory" asp-controller="ViewProduct" asp-route-categoryId="1">XEM THÊM</a>
                </div>
            </div>
        </div>

        <div class="brand-item col-lg-6 col-md-6">
            <div class="overlay-category"></div>
            <img src="./assets/img/donghothuysy.jpg" alt="">
            <div class="brand-info">
                <h1 class="brand-name">Đồng Hồ Thụy Sỹ</h1>
                <div class="see-more-btn">
                    <a asp-action="GetProductByCategory" asp-controller="ViewProduct" asp-route-categoryId="2">XEM THÊM</a>
                </div>
            </div>
        </div>
    </div>

