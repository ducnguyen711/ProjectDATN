@model IEnumerable<WatchStore.Web.Models.Contact>
<h6 class="dropdown-header">
    Contact
</h6>
@foreach (var item in Model)
{
    <a class="dropdown-item d-flex align-items-center" asp-area="Admin" asp-controller="Contact" asp-action="Details" asp-route-id="@item.Id">
        <div class="font-weight-bold">
            <div class="text-truncate">
                @item.Message;
            </div>
            <div class="small text-gray-500">@item.FullName · @item.DateSent</div>
        </div>
    </a>
}
<a class="dropdown-item text-center small text-gray-500" asp-area="Admin" asp-controller="Contact" asp-action="Index">Read More Messages</a>