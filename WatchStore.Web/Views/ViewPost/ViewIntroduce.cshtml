@model WatchStore.Web.Models.Post

<div class="container">
    <div class="row">
        <div class="col-md-7 post-detail-info">
            <h1 class="post-title">@Model.Title</h1>
            <p class="post-cdate">Ngày đăng: @String.Format("{0:dd/MM/yyyy}",Model.CreatedDate)</p>
            <div class="post-detail-content">
                @Html.Raw(Model.Content)
            </div>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-4">
            <p style="width: 90%; border-bottom: 2px solid #000; font-size: 24px">Các bài viết mới nhất</p>
            @await Component.InvokeAsync("NewPostBox")
        </div>
    </div>
</div>